<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrors が発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
<div class="field"></div>
 <h4>Title</h4>
 <%= f.text_field :title %>
	
 <div class="field"></div>
 <h4>Body</h4>
 <%= f.text_area :body %>
 
 <div class="actions"></div>
 <%= f.submit 'Update Book' %>
<% end %>

<span>
  <%= link_to "Show", book_path(@book.id) %>
</span>
|
<span>
  <%= link_to "Back", books_path %>  
</span>
